<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Repeat num_cycles="2">
            <Sequence>
                <Action ID="Ask" case="{ask name}"/>
                <Action ID="Ask" case="{say name}"/>
                <Action ID="Ask" case="{ask drink}"/>
                <Action ID="Ask" case="{say drink}"/>
            </Sequence>
        </Repeat>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="Ask">
            <inout_port name="case"/>
        </Action>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
