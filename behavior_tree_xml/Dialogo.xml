<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <Action ID="AskName"/>
            <Delay delay_msec="2000">
                <Action ID="IntroduceGuest"/>
            </Delay>
            <Delay delay_msec="2000">
                <Action ID="AskDrink"/>
            </Delay>
            <Delay delay_msec="2000">
                <Action ID="OrderDrink"/>
            </Delay>
            <Delay delay_msec="2000">
                <Action ID="ServeDrink"/>
            </Delay>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="AskDrink"/>
        <Action ID="AskName"/>
        <Action ID="IntroduceGuest"/>
        <Action ID="OrderDrink"/>
        <Action ID="ServeDrink"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
