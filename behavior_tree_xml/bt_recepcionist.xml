<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Repeat num_cycles="2">
            <Sequence>
                <Action ID="GoTo" Point="{Door}"/>
                <Action ID="WaitPerson"/>
                <Action ID="AskName"/>
                <Action ID="GoTo" Point="{Party}"/>
                <Action ID="IntroduceGuest"/>
                <ReactiveFallback>
                    <Condition ID="IfChair"/>
                    <Action ID="SearchChair"/>
                </ReactiveFallback>
                <Action ID="SendChair"/>
                <Action ID="AskDrink"/>
                <Action ID="GoTo" Point="{Barman}"/>
                <Action ID="OrderDrink"/>
                <Action ID="GoTo" Point="{Party}"/>
                <Action ID="ServeDrink"/>
            </Sequence>
        </Repeat>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="Ask">
            <input_port name="Request"/>
        </Action>
        <Action ID="AskDrink"/>
        <Action ID="AskName"/>
        <Action ID="GoTo">
            <input_port name="Point"/>
        </Action>
        <Condition ID="IfChair"/>
        <Action ID="IndicateChair"/>
        <Action ID="Introduce"/>
        <Action ID="IntroduceGuest"/>
        <Action ID="OrderDrink"/>
        <Action ID="SearchChair"/>
        <Action ID="SendChair"/>
        <Action ID="ServeDrink"/>
        <Action ID="WaitPerson"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
