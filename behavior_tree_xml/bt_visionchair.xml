<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <RetryUntilSuccessful num_attempts="1">
            <Sequence>
                <Fallback>
                    <Condition ID="FindChair"/>
                    <Action ID="SearchChair"/>
                </Fallback>
                <Sequence>
                    <Action ID="GoChair"/>
                    <Condition ID="ReachedChair"/>
                </Sequence>
            </Sequence>
        </RetryUntilSuccessful>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Condition ID="FindChair"/>
        <Action ID="GoChair"/>
        <Condition ID="ReachedChair"/>
        <Action ID="SearchChair"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>
